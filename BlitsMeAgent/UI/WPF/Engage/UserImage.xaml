<UserControl x:Class="Gwupe.Agent.UI.WPF.Engage.UserImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:utils="clr-namespace:Gwupe.Agent.UI.WPF.Utils"
            xmlns:Person="clr-namespace:Gwupe.Agent.Components.Person">
    <UserControl.Resources>
        <ResourceDictionary>
            <utils:ImageStreamReader x:Key="AvatarImageStreamReader"  DefaultImageUri="pack://application:,,,/ui/wpf/Images/silhoette.png" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Image Stretch="Uniform" Source="{Binding Path=Self.Avatar, Converter={StaticResource AvatarImageStreamReader}}"
                        Width="30" Height="30"/>
    </Grid>
</UserControl>
