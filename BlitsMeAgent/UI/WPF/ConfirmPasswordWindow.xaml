<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Gwupe.Agent.UI.WPF.ConfirmPasswordWindow"
	x:Name="Window"
	Title="Confirm Password"
	Width="263" Height="71" WindowStyle="None" AllowsTransparency="False"
    ResizeMode="NoResize"  WindowStartupLocation="CenterOwner">
    
    <Border BorderBrush="#516FA7" BorderThickness="1">
        <Grid x:Name="LayoutRoot"  Background="#FFB9CDE5" Width="263" Height="71">
		<Label Content="Confirm Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,3,0,0"/>
		<PasswordBox x:Name="ConfirmPassword" HorizontalAlignment="Left" Height="23" Margin="110,5,0,0" VerticalAlignment="Top" Width="140" Password="" FontFamily="Segoe UI" KeyDown="password_KeyDown"/>
            <Border BorderBrush="#5574AF" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="80,20,0,10" Width="75">
                <Button x:Name="CancelButton" Content="Cancel"  Click="CancelButtonClick" Style="{DynamicResource SaveChangesBtn}"/>
            </Border>
            <Border  BorderBrush="#5574AF" BorderThickness="1" HorizontalAlignment="Right" Margin="110,20,12,10" VerticalAlignment="Bottom" Width="75">
                <Button x:Name="ConfirmButton" Content="Confirm" Click="ConfirmButtonClick" Style="{DynamicResource SaveChangesBtn}"/>
            </Border>
        </Grid>
    </Border>
</Window>